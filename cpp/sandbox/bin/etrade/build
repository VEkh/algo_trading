#! /bin/bash

mkdir -p ./build/

sources=("etrade")

for src in "${sources[@]}"
do
  g++ \
    -iquote. \
    -iquote./src \
    -std=c++17 \
    -o ./build/$src \
    ./src/$src/$src.cpp \
    -lcrypto \
    -lcurl \
    `PKG_CONFIG_PATH=/usr/local/lib/pkgconfig pkg-config --libs --cflags libxml++-3.0`
  done
